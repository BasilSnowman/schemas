{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "TestInfo.schema.json",
  "definitions": {
    "TestInfo": {
      "$id": "#TestInfo",
      "type": "object",
      "description": "General information about the artifact",
      "required": [
        "description",
        "version",
        "termsOfService",
        "contact",
        "license"
      ],
      "properties": {
        "description": {
          "$ref": "MultilingualConverter.schema.json#/definitions/MultilingualConverter"
        },
        "version": {
          "$ref": "TestVersion.schema.json#/definitions/TestVersion"
        },
        "attributes": {
          "type": "array",
          "items": {
            "$ref": "Attribute.schema.json#/definitions/Attribute"
          }
        },
        "termsOfService": {
          "type": "string",
          "description": "The terms of service for the artifact",
          "example": "My terms of service"
        },
        "contact": {
          "$ref": "TestContact.schema.json#/definitions/TestContact"
        },
        "license": {
          "$ref": "License.schema.json#/definitions/License"
        }
      }
    }
  }
}

