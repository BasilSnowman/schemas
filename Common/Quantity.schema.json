{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Quantity.schema.json",
    "title": "Quantity",
    "definitions": {
        "Quantity": {
            "$id": "#Quantity",
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number",
                    "format": "float",
	        	    "default": 1
                },
                "units": {
                    "type": "string"
                }
            }
        }
    }
}