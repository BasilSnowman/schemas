{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Street.schema.json",
    "title": "Street",
    "definitions": {
        "Street": {
            "description": "A street is a road in a city or locality that has buildings that are usually close together along one or both sides",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the Street"
                },
                "name": {
                    "type": "string",
                    "description": "The defined name of the street"
                },
                "type": {
                    "type": "string",
                    "description": "alley, avenue, etc."
                },
                "characteristic": {
                    "type": "array",
                    "items": {
                        "$ref": "LocationCharacteristic.schema.json/#definitions/LocationCharacteristic"
                    }
                },
                "address": {
                    "type": "array",
                    "items": {
                        "$ref": "AddressRef.schema.json/#definitions/AddressRef"
                    }
                }
            },
            "allOf": [
                {
                    "$ref": "CommonComponents.schema.json/#polymorphicPattern"
                }
            ]
        }
    }
}
