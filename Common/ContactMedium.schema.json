{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "ContactMedium.schema.json", 
    "title": "ContactMedium", 
    "definitions": {
        "ContactMedium": {
            "type": "object", 
            "description": "Indicates the contact medium that could be used.", 
            "properties": {
                 "preferred": {
                    "type": "boolean", 
                    "description": "A true value indicates that it is the preferred contact medium of the party"
                }, 
                "mediumType": {
                    "type": "string", 
                    "description": "Type of the contact medium: email address, phone number, postal contact, social network"
                }, 
                "validFor": {
                    "$ref": "TimePeriod.schema.json#/definitions/TimePeriod"
                },
                "characteristic": {
                    "$ref": "MediumCharacteristic.schema.json#/definitions/MediumCharacteristic"
                }
            },
			"allOf": [
                {
                    "$ref": "Entity.schema.json#Entity"
                }
            ]
        }
    }
}
