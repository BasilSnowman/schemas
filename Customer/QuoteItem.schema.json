{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "QuoteItem.schema.json",
    "title": "QuoteItem",
    "description": "A quote items describe an action to be performed on a productOffering or a product in order to get pricing elements and condition.",
    "type": "object",
    "properties": {
        "action": {
            "type": "string",
            "description": "Action to be perfomed on this quote item (add, modify, remove, etc.)"
        },
        "id": {
            "type": "string",
            "description": "Identifier of the quote item (generally it is a sequence number 01, 02, 03, ...)"
        },
        "quantity": {
            "type": "integer",
            "description": "Quantity asked for this quote item"
        },
        "state": {
            "type": "string",
            "description": "State of the quote item : described in the state machine diagram"
        },
        "quoteItem": {
            "type": "array",
            "items": {
                "$ref": "QuoteItem.schema.json/#definitions/QuoteItem"
            }
        },
        "quoteItemRelationship": {
            "type": "array",
            "items": {
                "$ref": "QuoteItemRelationship.schema.json/#definitions/QuoteItemRelationship"
            }
        },
        "attachment": {
            "type": "array",
            "items": {
                "$ref": "../Common/Attachment.schema.json/#definitions/Attachment"
            }
        },
        "quoteItemAuthorization": {
            "type": "array",
            "items": {
                "$ref": "Authorization.schema.json/#definitions/Authorization"
            }
        },
        "note": {
            "type": "array",
            "items": {
                "$ref": "../Common/Note.schema.json/#definitions/Note"
            }
        },
        "relatedParty": {
            "type": "array",
            "items": {
                "$ref": "../EngagedParty/RelatedPartyRef.schema.json/#definitions/RelatedPartyRef"
            }
        },
        "appointment": {
            "type": "array",
            "items": {
                "$ref": "AppointmentRef.schema.json/#definitions/AppointmentRef"
            }
        },
        "productOffering": {
            "$ref": "../Product/ProductOfferingRef.schema.json/#definitions/ProductOfferingRef"
        },
        "quoteItemPrice": {
            "type": "array",
            "items": {
                "$ref": "QuotePrice.schema.json/#definitions/QuotePrice"
            }
        },
        "product": {
            "$ref": "../Product/Product.schema.json/#definitions/Product"
        }
    },
    "allOf": [
        {
            "$ref": "../Common/CommonComponents.schema.json/#polymorphicPattern"
        }
    ]
}
