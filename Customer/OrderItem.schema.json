{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "OrderItem.schema.json",
    "title": "OrderItem",
    "definitions": {
        "OrderItem": {
            "description": "An identified part of the order. A product order is decomposed into one or more order items.",
            "type": "object",
            "properties": {
                "action": {
                    "type": "string",
                    "description": "Can be \"add\" / \"modify\" / \"no_change\"/ \"delete\""
                },
                "id": {
                    "type": "string",
                    "description": "Identifier of the line item (generally it is a sequence number 01, 02, 03, ...)"
                },
                "quantity": {
                    "type": "integer",
                    "description": "Quantity ordered"
                },
                "state": {
                    "type": "string",
                    "description": "State of the order item : described in the state machine diagram"
                },
                "appointment": {
                    "$ref": "AppointmentRef.schema.json/#definitions/AppointmentRef"
                },
                "billingAccount": {
                    "$ref": "BillingAccountRef.schema.json/#definitions/BillingAccountRef"
                },
                "itemPrice": {
                    "type": "array",
                    "items": {
                        "$ref": "OrderPrice.schema.json/#definitions/OrderPrice"
                    }
                },
                "orderItem": {
                    "type": "array",
                    "items": {
                        "$ref": "OrderItem.schema.json/#definitions/OrderItem"
                    }
                },
                "orderItemRelationship": {
                    "type": "array",
                    "items": {
                        "$ref": "OrderItemRelationship.schema.json/#definitions/OrderItemRelationship"
                    }
                },
                "itemTotalPrice": {
                    "type": "array",
                    "items": {
                        "$ref": "OrderPrice.schema.json/#definitions/OrderPrice"
                    }
                },
                "payment": {
                    "type": "array",
                    "items": {
                        "$ref": "../EngagedParty/PaymentRef.schema.json/#definitions/PaymentRef"
                    }
                },
                "productOffering": {
                    "$ref": "../Product/ProductOfferingRef.schema.json/#definitions/ProductOfferingRef"
                },
                "product": {
                    "$ref": "../Product/Product.schema.json/#definitions/Product"
                },
                "qualification": {
                    "type": "array",
                    "items": {
                        "$ref": "../Service/QualificationRef.schema.json/#definitions/QualificationRef"
                    }
                },
                "itemTerm": {
                    "type": "array",
                    "items": {
                        "$ref": "OrderTerm.schema.json/#definitions/OrderTerm"
                    }
                }
            },
            "allOf": [
                {
                    "$ref": "../Common/CommonComponents.schema.json/#definitions/polymorphicPattern"
                }
            ]
        }
    }
}
