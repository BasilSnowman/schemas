{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "ServiceSpecification.schema.json",
    "title": "ServiceSpecification",
    "description": "Characteristics of a type of service, acting as a template by which Services can be instantiated.\nServices with the same specification will share the same set of characteristics",
    "type": "object",

    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for this particular specification",
            "examples": [ "4aafacbd-11ff-4dc8-b445-305f2215715f", "2334bc59-726e-4d34-ab96-f50e0561412f" ]
        },
        "href": {
            "type": "string",
            "format": "uri",
            "description": "URI for this specification",
            "examples": [ "" ]
        },
        "name": {
            "type": "string",
            "description": "Name given to this specification",
            "examples": [ "Virtual CPE", "E-Line Service" ]
        },
        "description": {
            "type": "string",
            "description": "Description of this specification",
            "examples": [ "E-Line is defined by the MEF for connecting exactly 2 UNIs where they can communicate only with one another" ]
        },
        "version": {
            "type": "string",
            "description": "Version of this specification",
            "examples": [ "2.6", "10.3" ]
        },
        "validFor": {
            "$ref": "TimePeriod.schema.json",
            "description": "Period of time that this specification is valid for",
        },
        "lastUpdate": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when this specification was last updated",
            "examples": [ "1985-04-12T23:20:50.52Z", "2018-09-21T09:13:16-07:00" ]
        },
        "status": {
            "type": "string",
            "description": "The lifecycle status of this specification",
            "examples": [ "published" ]
        },
        "isBundle": {
            "type": "boolean",
            "description": "If true, this represents a bundled specification",
            "examples": [ true, false ]
        },
        "resourceSpecificationRef": {
            "type": "array",
            "description": "",
            "items": {
                "$ref": "#/definitions/ResourceSpecificationRef"
            },
            "examples": [ "" ]
        },
        "attachment": {
            "type": "array", 
            "items": {
                "$ref": "#/definitions/Attachment"
            }
        }, 
        "serviceSpecCharacteristic": {
            "type": "array", 
            "items": {
                "$ref": "#/definitions/ServiceSpecCharacteristic"
            }
        }, 
        "relatedParty": {
            "type": "array", 
            "items": {
                "$ref": "#/definitions/RelatedPartyRef"
            }
        }, 
        "serviceSpecRelationship": {
            "type": "array", 
            "items": {
                "$ref": "#/definitions/ServiceSpecRelationship"
            }
        }, 
        "targetServiceSchema": {
            "$ref": "#/definitions/TargetServiceSchemaRef"
        }
    },
    "allOf" : [
        { "$ref": "CommonComponents.schema.json/#polymorphicPattern" }
     ]
}