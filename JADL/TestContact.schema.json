{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "TestContact.schema.json",
  "title": "TestContact",
  "definitions": {
    "TestContact": {
      "type": "object",
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Joe Smith"
        },
        "email": {
          "type": "string",
          "format": "email",
          "example": "joe.smith@mycompany.com"
        }
      }
    }
  }
}