{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "IndividualIdentification.schema.json", 
    "title": "IndividualIdentification", 
    "definitions": {
        "IndividualIdentification": {
            "type": "object", 
            "description": "Allows to store and access as required the information used as proof of identity by an individual", 
            "properties": {
                "identificationType": {
                    "type": "string", 
                    "description": "Identification type (passport, national identity card, driver license, social security number, birth certificate,\u2026)"
                },
                "identificationId": {
                    "type": "string", 
                    "description": "Identifier of the identification"
                },
                "issuingAuthority": {
                    "type": "string", 
                    "description": "Authority which has issued the identification (social security, town hall,\u2026)"
                },
                "issuingDate": {
                    "type": "string", 
                    "format": "date-time", 
                    "description": "Date of issue for the individual identification"
                }, 
                "validFor": {
                    "$ref": "TimePeriod.schema.json#/definitions/TimePeriod"
                },			
				"attachment": {
                    "type": "array", 
                    "items": {
                        "$ref": "Attachment.schema.json#/definitions/Attachment"
                    }
                }  
            },
			"allOf": [
                {
                    "$ref": "Entity.schema.json#Entity"
                }
            ]			
        }
    }
}