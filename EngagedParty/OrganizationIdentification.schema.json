{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "OrganizationIdentification.schema.json", 
    "title": "OrganizationIdentification", 
    "definitions": {
        "OrganizationIdentification": {
            "type": "object", 
            "description": "Allows to store and access the information used as proof of identity by an organization.", 
            "properties": {
               "identificationType": {
                    "type": "string", 
                    "description": "Type of identification information used to identify the company in country or internationally"
                },
               "identificationId": {
                    "type": "string", 
                    "description": "Identifier of the identification"
                }, 
                "issuingAuthority": {
                    "type": "string", 
                    "description": "Authority which has issued the identifier (chamber of commerce...)"
                }, 
                "issuingDate": {
                    "type": "string", 
                    "format": "date-time", 
                    "description": "Date of issue for the organization identification"
                }, 
               "validFor": {
                    "$ref": "TimePeriod.schema.json#/definitions/TimePeriod"
                },				
               "attachment": {
                    "type": "array", 
                    "items": {
                        "$ref": "Attachment.schema.json#/definitions/Attachment"
                    }
                }
            },
			"allOf": [
                {
                    "$ref": "Entity.schema.json#Entity"
                }
            ]			
        }
    }
}
